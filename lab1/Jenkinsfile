pipeline {
  agent none

  environment {
    IMAGE_NAME = "dramax8569/ci-cd-groovy-golang-docker"
    IMAGE_TAG  = "latest"
    DOCKER_CREDENTIALS_ID = "dockerhub-creds"
  }

  stages {
    // 1️⃣ Clonamos el repositorio en el nodo Jenkins (donde sí existe .git)
    stage('Checkout') {
      agent any
      steps {
        checkout scm
        sh 'ls -la'
      }
    }

    // 2️⃣ Build & Test dentro de un contenedor Go, **reusando** el workspace del nodo
    stage('Build & Test') {
      agent {
        docker {
          image 'golang:1.21'
          args  '-v /var/run/docker.sock:/var/run/docker.sock'
          reuseNode true
        }
      }
      steps {
        sh 'go version'
        sh 'go build -o app'
        sh 'go test ./...'
      }
    }

    // 3️⃣ Construir y subir la imagen Docker desde el nodo principal
    stage('Docker Build & Push') {
      agent any
      steps {
        // Build
        sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."

        // Push usando credenciales seguras
        withCredentials([usernamePassword(
          credentialsId: "${DOCKER_CREDENTIALS_ID}",
          usernameVariable: 'DOCKER_USER',
          passwordVariable: 'DOCKER_PASS'
        )]) {
          sh '''
            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
            docker push ${IMAGE_NAME}:${IMAGE_TAG}
          '''
        }
      }
    }
  }

  post {
    success { echo "✅ Pipeline finalizado exitosamente." }
    failure { echo "❌ Algo falló en la ejecución del pipeline."  }
  }
}
